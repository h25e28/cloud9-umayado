<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="users-new-container">
        <h1 class="text-center text-white">Sign in</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <br>
            <%= f.text_field :name, :size=>"40", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <br>
            <%= f.text_field :email, :size=>"40", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'text-white' %>
            <br>
            <%= f.password_field :password, :size=>"40", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-white' %>
            <br>
            <%= f.password_field :password_confirmation, :size=>"40", class: 'form-control' %>
          </div>

          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
        <%= link_to 'ログインはこちら', '/login',class: 'text-white' %>
      </div>
    </div>
  </div>
</div>